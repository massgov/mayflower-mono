<div class="ma__main-nav-horizontal">
  <ul class="ma__main-nav-horizontal__items js-main-nav-horizontal" role="menubar">
    {% for nav in mainNav %}
      {% set buttonId =  'button' ~ loop.index %}
      {% set menuId =  'menu' ~ loop.index %}
      <li  role="menuitem" class="ma__main-nav-horizontal__item {{ nav.active ? 'is-active' : '' }} {{ nav.subNav ? 'has-subnav js-main-nav-horizontal-toggle' : 'js-main-nav-horizontal-top-link' }}" tabindex="-1">
        {% if nav.subNav %}
          <button id="{{ buttonId }}" class="ma__main-nav-horizontal__top-link" aria-haspopup="true" aria-expanded="false" tabindex="0"><span class="visually-hidden show-label">Show the sub topics of </span>{{ nav.text }}</button>
          <div class="ma__main-nav-horizontal__subitems js-main-nav-horizontal-content is-closed">
            <ul id="{{ menuId }}" role="menu" aria-labelledby="{{ buttonId }}" class="ma__main-nav-horizontal__container">
              <li role="menuitem" class="ma__main-nav-horizontal__subitem"><a href="{{ nav.href }}" class="ma__main-nav-horizontal__link">{{ nav.text }}</a></li>
              {% for subNav in nav.subNav %}
                <li class="ma__main-nav-horizontal__subitem"><a href="{{ subNav.href }}" class="ma__main-nav-horizontal__link">{{ subNav.text }}</a></li>
              {% endfor %}
              <li class="ma__main-nav-horizontal__subitem" role="menuitem">
                <a href="{{ nav.href }}" class="ma__main-nav-horizontal__link">
                  {{ icon('arrow-bent') }}
                  <span>
                    <span class="visually-hidden">See all topics under </span>
                    {{ nav.text }}
                  </span>
                </a>
              </li>
            </ul>
          </div>
        {% elseif nav.href %}
          {# This is temporary. We want to provide visual context for the COVID-19 menu link. #}
          {% set altClass = '' %}
          {% if 'covid' in nav.text|lower %}
            {% set altClass = 'cv-alternate-style' %}
          {% endif %}
          <a href="{{ nav.href }}" class="ma__main-nav-horizontal__top-link {{ altClass }}" tabindex="0">{{ nav.text }}</a>
        {% else %}
          <button id="{{ buttonId }}" class="ma__main-nav-horizontal__top-link" tabindex="{{ loop.first? 0 : -1 }}">{{ nav.text }}</button>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>