<section class="ma__mapped-locations">
  {% if mappedLocations.compHeading %}
    <div class="ma__mapped-locations__header">
      {% if mappedLocations.compHeading %}
       {% set compHeading = mappedLocations.compHeading %}
       {% include "@atoms/04-headings/comp-heading.twig" %}
      {% endif %}
    </div>
  {% endif %}
  {% if mappedLocations.googleMap %}
    <div class="ma__mapped-locations__map">
      {% set googleMap = mappedLocations.googleMap %}
      {% include "@molecules/google-map.twig" %}
    </div>
  {% endif %}
  {% if mappedLocations.paragraph or mappedLocations.button %}
    <div class="ma__mapped-locations__aside">
      {% if mappedLocations.paragraph %}
        <div class="ma__mapped-locations__info">
          {% set paragraph = mappedLocations.paragraph %}
           {% set paragraph = paragraph|merge({
                    "#text": "<p>" ~ mappedLocations.paragraph.text ~ "</p>",
                    "#type": "processed_text",
                    "#format": "basic_html",
                    "#langcode": "en"
            }) %}
          {% include "@atoms/html.twig" %}
        </div>
      {% endif %}
      {% if mappedLocations.button %}
        <div class="ma__mapped-locations__button">
          {% set button = mappedLocations.button %}
          {% include "@atoms/01-buttons/button.twig" %}
        </div>
      {% endif %}
    </div>
  {% endif %}
</section>
